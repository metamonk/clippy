{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clippy",
  "version": "0.1.0",
  "identifier": "com.zeno.clippy",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "clippy",
        "width": 1280,
        "height": 720,
        "minWidth": 1280,
        "minHeight": 720,
        "decorations": true,
        "titleBarStyle": "Visible"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "12.0",
      "exceptionDomain": "",
      "signingIdentity": "Apple Development: Zeno Shin (S7M5YJ56Y3)"
    }
  }
}
